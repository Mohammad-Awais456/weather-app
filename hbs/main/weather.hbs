<!doctype html>
<html lang="en">
{{>header}}


<body>

    {{>nav}}

    <!-- .......................header starting...........  -->

    <div class="container-fluid mx-0 mt-5" id="search_main">



        <form action="#">


            <div class="row w-100  d-flex justify-content-center align-items-center ">
<form action="#" method="get">
                <div class="col-md-7 col-lg-4 col-12" style="position: relative;">


                    <input class="w-100" type="text" autocomplete="off" placeholder="Enter City name" id="searchfield">
                    <button style="z-index: 234324324;" id="search_button">
                        <i style="    color: white;" class="fas fa-search"> </i>
                    </button>
                </div>
</form>

            </div>

        </form>

        <div class="row mx-0 my-4 p-0" id="result_main">


            <div id="result_inner" class="col-md-7 col-lg-5 col-xl-4 col-sm-10 col-12 ">

                <div class="timedate py-1 row my-0 mx-0 ">
                    <div class="d-flex  pl-2 py-2  align-items-center  col-6">

                        <h2 id="day"></h2>
                    </div>
                    <div class="col-6  pr-2 py-2 d-flex justify-content-end align-items-center">
                        <h5 id="date"></h5>
                    </div>


                </div>



                <div class=" py-3 row weatherinfo">


                    <div id="locationdiv" class="pl-2 col-12">

                        <h4 style="display: inline-block;" id="cityname">
                            Get Result Here,
                        </h4>
                        <span id="countryname"></span>
                    </div>


                    <div class="pl-2 col-5 d-flex justify-content-start align-items-center" id="temp_main">
                        <h1 id="currenttemp" ></h1>
                    </div>
                    <div id="status" class="d-flex justify-content-end align-items-center col-7">
                       
                    </div>


                </div>


            </div>

        </div>



    </div>
    <!-- .......................header ending...........  -->



